<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f8e3"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="5dp" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="#4ea7b8" />

        <LinearLayout
            android:id="@+id/llScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnL"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="#4ea7b8"
                android:text="&lt;"
                android:textColor="#f1f8e3" />

            <com.lxr.activity.HorizontalListView
                android:id="@+id/hlvFloor"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="#f1f8e3" >
            </com.lxr.activity.HorizontalListView>

            <Button
                android:id="@+id/btnR"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text=">"
                android:background="#4ea7b8"
                android:textColor="#f1f8e3" />
        </LinearLayout>
    </LinearLayout>
<RelativeLayout 
    android:layout_below="@id/llContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <Button
        android:id="@+id/btnDrager"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="10dp"
        android:background="#4ea7b8"
        android:text="Button" />
</RelativeLayout>
</RelativeLayout>